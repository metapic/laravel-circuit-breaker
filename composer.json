{
    "name": "metapic/laravel-circuit-breaker",
    "description": "Laravel circuit breaker package",
    "keywords": [
        "bvtterfly",
        "laravel",
        "laravel-circuit-breaker"
    ],
    "homepage": "https://github.com/metapic/laravel-circuit-breaker",
    "license": "MIT",
    "authors": [
        {
            "name": "Metapic",
            "email": "mark@metapic.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/laravel-package-tools": "^1.9.2",
        "illuminate/contracts": "^11.0"
    },
    "require-dev": {
        "nunomaduro/collision": "^8.1",
        "nunomaduro/larastan": "^v2.9.3",
        "orchestra/testbench": "^v9.0.0",
        "pestphp/pest": "^v2.34.7",
        "pestphp/pest-plugin-laravel": "^v2.4.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^10.5.17",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Metapic\\LaravelCircuitBreaker\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Metapic\\LaravelCircuitBreaker\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Metapic\\LaravelCircuitBreaker\\LaravelCircuitBreakerServiceProvider"
            ],
            "aliases": {
                "LaravelCircuitBreaker": "CircuitBreaker"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
